<%- include("partials/header") %>

<div class="container">
	<div class="col">
		<form action="/register" method="POST" style="margin-right:35%; margin-left:35%;">
		  <h1 class="display-4">
			Sign Up
		</h1>
			<br>
			<div class="form-group">
			<label for="exampleInputEmail1">Username</label>
			<input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
			<small id="emailHelp" class="form-text text-muted">Pick an Username</small>
		  </div>
		  <div class="form-group">
			<label for="exampleInputPassword1">Password</label>
			<input type="password" name="password" class="form-control" id="exampleInputPassword1">
			  <small id="emailHelp" class="form-text text-muted">Choose A Strong Password</small>
		  </div>
		  <button type="submit" class="btn btn-primary">Submit</button>
		</form>
		<br>
		<br>
	</div>
</div>

<%- include("partials/footer") %>